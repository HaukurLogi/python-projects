import random

BEATEN_BY = {
     "rock": "paper",
     "paper": "scissors",
     "scissors": "rock",
}

def game_result(us, them):
     if us == them:
          return "draw"
     if them == BEATEN_BY[us]:
          return "win"
     return "lose"

rng = random.randint(1,3)
if rng == 1:
    enemy = "rock"
if rng == 2:
    enemy = "paper"
if rng == 3:
    enemy = "scissors"

choice = input("Choice: ")
choice = choice.lower()
print(f"Enemy chose {enemy}. You {game_result(choice, enemy)}!")
